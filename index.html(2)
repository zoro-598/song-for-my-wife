  <script>
    // --- helper: create floating hearts ---
    const heartsEl = document.getElementById('hearts');
    function makeHeart(){
      const el = document.createElement('div');
      el.className='heart';
      const size = Math.random()*30 + 16;
      el.style.width = size+'px';
      el.style.height = size+'px';
      el.style.left = Math.random()*100 + '%';
      el.style.animationDuration = (6 + Math.random()*6) + 's';
      el.style.opacity = (0.6 + Math.random()*0.4);
      el.style.transform = 'translateY(0)';
      el.innerHTML = '❤';
      el.style.fontSize = size+'px';
      heartsEl.appendChild(el);
      setTimeout(()=>el.remove(), 12000);
    }
    setInterval(makeHeart, 450);

    // --- slideshow ---
    const slides = Array.from(document.querySelectorAll('.slide'));
    let idx = 0;
    setInterval(()=>{
      slides[idx].classList.remove('show');
      idx = (idx+1)%slides.length;
      slides[idx].classList.add('show');
    },5000);

    // --- audio controls ---
    const audio = document.getElementById('audio');
    const playBtn = document.getElementById('playBtn');
    const pauseBtn = document.getElementById('pauseBtn');
    const fullBtn = document.getElementById('fullBtn');

    playBtn.addEventListener('click', async ()=>{
      try{ await audio.play(); }
      catch(e){ /* autoplay blocked; user gesture required */ }
    });
    pauseBtn.addEventListener('click', ()=>audio.pause());

    // toggle fullscreen
    fullBtn.addEventListener('click', ()=>{
      if(!document.fullscreenElement) document.documentElement.requestFullscreen();
      else document.exitFullscreen();
    });

    // small accessibility: enable spacebar to toggle play/pause
    window.addEventListener('keydown', e=>{
      if(e.code==='Space'){
        e.preventDefault();
        if(audio.paused) audio.play(); else audio.pause();
      }
    });

    // Make the file usable immediately if user's images are missing
    window.addEventListener('load', ()=>{
      const avatar = document.getElementById('avatar');
      if(avatar.style.display==='none'){
        // create a soft placeholder circle
        const ph = document.createElement('div');
        ph.style.width='120px';ph.style.height='120px';ph.style.borderRadius='12px';ph.style.background='linear-gradient(135deg,#ff7fa3,#ffcfe6)';ph.style.flex='0 0 120px';
        const banner = document.querySelector('.banner');
        banner.insertBefore(ph,banner.firstChild);
      }
    });

    // ----- Quick personalization (optional) -----
    // If you want to set the wife's name from the URL: ?name=Jailene
    const qp = new URLSearchParams(location.search);
    if(qp.get('name')) document.getElementById('wifeName').textContent = qp.get('name');

    // End script
  </script>

  <!--
    HOW TO USE:
    1) Save this file as index.html in your GitHub Pages repository root (or a folder) so it becomes your site.
    2) Put the MP3 file (Arctic-Monkeys-I-Wanna-Be-Yours-(RawPraise.ng).mp3) in the same folder as this HTML file.
    3) Add your photos in an "images/" folder with filenames: 1.jpg, 2.jpg, 3.jpg and hero.jpg (or edit paths below).
    4) Commit & push; visit your GitHub Pages URL. If audio doesn't autoplay, click the Play button.
    5) Optional: edit the text inside the poem div to personalize.
  -->
