    /* hearts background */
    .hearts{position:absolute;inset:0;pointer-events:none;overflow:hidden}
    .heart{position:absolute;will-change:transform,opacity;animation:rise 8s linear infinite;opacity:0}
    @keyframes rise{
      0%{transform:translateY(120vh) scale(.6) rotate(0);opacity:0}
      5%{opacity:1}
      100%{transform:translateY(-40vh) scale(1.2) rotate(360deg);opacity:0}
    }

    /* card */
    .card{backdrop-filter:blur(6px);background:linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.02));padding:28px;border-radius:18px;box-shadow:0 10px 30px rgba(0,0,0,0.5);max-width:920px;width:100%;}
    .banner{display:flex;gap:18px;align-items:center}
    .avatar{width:120px;height:120px;border-radius:12px;flex:0 0 120px;object-fit:cover;background:linear-gradient(135deg,var(--accent),#ffd1e6);border:4px solid rgba(255,255,255,0.06)}
